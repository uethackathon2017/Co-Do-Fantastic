<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/Function_Setting_Alarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@android:color/white">
            <TextView
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancer"
                android:textColor="@android:color/black"
                android:id="@+id/Function_Setting_Cancel" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EditAlarm"
                android:textSize="24dp"
                android:textColor="@android:color/black"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/Function_Setting_EditAlarm"
                android:layout_centerInParent="true"
                 />
            <TextView
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:id="@+id/Function_Setting_Delete"
                android:textColor="@android:color/black"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/Head_Setting_Time"
            android:layout_below="@id/Function_Setting_Alarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@android:color/white">
            <TextView
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chọn Game Alarm:"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/GameName"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vận Động"
                android:background="@color/colorAccent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Time_Setting_Alarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Head_Setting_Time"
            android:layout_margin="5dp"
            android:background="@android:color/white">
            <TextView
                android:id="@+id/text_chose_time"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chọn Giờ báo thức:"
                android:textColor="@android:color/black"/>
            <TimePicker
                android:id="@+id/timePicker1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:amPmBackgroundColor="@color/colorAccent"
                android:numbersSelectorColor="@color/colorPrimary"
                android:layout_below="@id/text_chose_time"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/Day_Setting_Alarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Time_Setting_Alarm"
            android:layout_margin="5dp"
            android:background="@android:color/white">
            <TextView
                android:id="@+id/text_chose_day_repeat"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Báo lại:"
                android:textColor="@android:color/black"
                />
            <TextView
                android:id="@+id/btn_T2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T2"
                android:gravity="center"
                android:layout_below="@id/text_chose_day_repeat"
                android:background="@drawable/border_btn"
                android:textColor="@android:color/black"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_alignStart="@+id/text_chose_day_repeat" />
            <TextView
                android:id="@+id/btn_T3"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T3"
                android:gravity="center"
                android:background="@drawable/border_btn"
                android:textColor="@android:color/black"
                android:layout_alignBaseline="@+id/btn_T2"
                android:layout_alignBottom="@+id/btn_T2"
                android:layout_toEndOf="@+id/btn_T2" />
            <TextView
                android:id="@+id/btn_T4"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T4"
                android:gravity="center"
                android:background="@drawable/border_btn"
                android:textColor="@android:color/black"
                android:layout_alignBaseline="@+id/btn_T3"
                android:layout_alignBottom="@+id/btn_T3"
                android:layout_toEndOf="@+id/btn_T3" />
            <TextView
                android:id="@+id/btn_T5"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T5"
                android:gravity="center"
                android:background="@drawable/border_btn"
                android:textColor="@android:color/black"
                android:layout_alignBaseline="@+id/btn_T4"
                android:layout_alignBottom="@+id/btn_T4"
                android:layout_toEndOf="@+id/btn_T4" />
            <TextView
                android:id="@+id/btn_T6"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T6"
                android:gravity="center"
                android:background="@drawable/border_btn"
                android:textColor="@android:color/black"
                android:layout_alignBaseline="@+id/btn_T5"
                android:layout_alignBottom="@+id/btn_T5"
                android:layout_toEndOf="@+id/btn_T5" />
            <TextView
                android:id="@+id/btn_T7"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T7"
                android:gravity="center"
                android:background="@drawable/border_btn"
                android:textColor="@android:color/black"
                android:layout_alignBaseline="@+id/btn_T6"
                android:layout_alignBottom="@+id/btn_T6"
                android:layout_toEndOf="@+id/btn_T6" />
            <TextView
                android:id="@+id/btn_CN"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CN"
                android:gravity="center"
                android:background="@drawable/border_btn"
                android:textColor="@android:color/black"
                android:layout_alignBaseline="@+id/btn_T7"
                android:layout_alignBottom="@+id/btn_T7"
                android:layout_toEndOf="@+id/btn_T7" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Body_Setting_Alarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Day_Setting_Alarm"
            android:layout_margin="5dp"
            android:background="@android:color/white">
            <TextView
                android:id="@+id/text_chose_label"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhãn:"
                android:textSize="16dp"
                android:textColor="@android:color/black"
                />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T2 tot lanh"
                android:textSize="20dp"
                android:background="@android:color/transparent"
                android:layout_alignBaseline="@+id/text_chose_label"
                android:layout_alignBottom="@+id/text_chose_label"
                android:layout_toEndOf="@+id/text_chose_label"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_chose_label">
                <TextView
                    android:id="@+id/text_chose_ringstone"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nhạc chuông:"
                    android:textSize="16dp"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:id="@+id/text_chose_ringstone_chose"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đã chọn - "
                    android:textSize="16dp"
                    android:textColor="@android:color/black"
                    android:layout_below="@id/text_chose_ringstone"
                    />
                <TextView
                    android:id="@+id/text_chose_ringstone_music"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RingRingRing "
                    android:textSize="16dp"
                    android:textColor="@android:color/black"
                    android:layout_alignBaseline="@+id/text_chose_ringstone_chose"
                    android:layout_alignBottom="@+id/text_chose_ringstone_chose"
                    android:layout_toEndOf="@+id/text_chose_ringstone_chose"
                    />
            </RelativeLayout>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/Save_Setting_Alarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Body_Setting_Alarm"
            android:layout_margin="5dp"
            android:background="@color/colorAccent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lưu Lại"
                android:layout_margin="10dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                />
        </RelativeLayout>
    </RelativeLayout>

</ScrollView>